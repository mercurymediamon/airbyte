      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "date_epoch": {
            "type": "integer"
          },
          "astro": {
            "type": "object",
            "properties": {
              "sunrise": {
                "type": "string"
              },
              "sunset": {
                "type": "string"
              },
              "moonrise": {
                "type": "string"
              },
              "moonset": {
                "type": "string"
              },
              "moon_phase": {
                "type": "string"
              },
              "moon_illumination": {
                "type": "integer"
              }
            },
            "required": [
              "moon_illumination",
              "moon_phase",
              "moonrise",
              "moonset",
              "sunrise",
              "sunset"
            ]
          },
          "mintemp": {
            "type": "integer"
          },
          "maxtemp": {
            "type": "integer"
          },
          "avgtemp": {
            "type": "integer"
          },
          "totalsnow": {
            "type": "integer"
          },
          "sunhour": {
            "type": "number"
          },
          "uv_index": {
            "type": "integer"
          }
