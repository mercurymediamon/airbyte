      "required": [
        "cloudcover",
        "feelslike",
        "humidity",
        "is_day",
        "observation_time",
        "precip",
        "pressure",
        "temperature",
        "uv_index",
        "visibility",
        "weather_code",
        "weather_descriptions",
        "weather_icons",
        "wind_degree",
        "wind_dir",
        "wind_speed"
      ]
