{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Weatherstack - Spec",
    "type": "object",
    "required": [
      "access_key",
      "query"
    ],
    "properties": {
      "access_key": {
        "type": "string",
        "description": "API access token that can be generated via your Weatherstack account."
      },
      "query": {
        "type": "array",
        "description": "Location query to be passed to API, can also be a set of coordinates (lat, lon).",
        "examples": [
          "Berlin",
          "New York",
          "52.52 13.40"
        ]
      },
      "forecast": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "forecast_days": {
            "type": "integer",
            "description": "Number of days to fetch forecast for.",
            "default": 10
          },
          "hourly_interval": {
            "type": "integer",
            "description": "If hourly data is enabled, use this parameter to define the interval: 1, 3, 6, 12 or 24 hourly (day average)",
            "default": 1
          }
        }
      },
      "historical": {
        "type": "object",
        "oneOf": [
          {
            "required": [
              "date"
            ]
          },
          {
            "required": [
              "date_start",
              "date_end"
            ]
          }
        ],
        "additionalProperties": false,
        "properties": {
          "date": {
            "type": "string",
            "description": "One historical date or multiple semicolon-separated dates to the API",
            "default": "2020-01-01",
            "examples": [
              "2015-01-21",
              "2015-01-21;2015-01-22"
            ],
            "pattern": "([0-9]{4}-[0-9]{2}-[0-9]{2};)*[0-9]{4}-[0-9]{2}-[0-9]{2}"
          },
          "date_start": {
            "type": "string",
            "description": "Use this parameter to pass a start date for the current historical time-series request.",
            "default": "2020-01-01",
            "examples": [
              "2015-01-21"
            ],
            "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
          },
          "date_end": {
            "type": "string",
            "description": "Use this parameter to pass an end date for the current historical time-series request.",
            "default": "2020-01-01",
            "examples": [
              "2015-01-21"
            ],
            "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
          },
          "hourly_interval": {
            "type": "integer",
            "description": "If hourly data is enabled, use this parameter to define the interval: 1, 3, 6, 12 or 24 hourly (day average)",
            "default": 1
          }
        }
      }
    }
  }
}